<div class="container">
  <div class="row justify-content-center">
    <%= form_for "/", multipart: true do |f| %>
      <hr>
      <div class=""><%= f.label 'Email' %></div>
      <%= f.text_field 'email' %>
      <div class=""><%= f.label 'Message' %></div>
      <%= f.text_field 'message' %>
      <hr>
      <div class=""><%= f.submit "Send", class: "btn btn-large btn-primary" %></div>
    <% end %>
  </div>
  <div class="d-flex justify-content-between">
    <div class="pousse"></div>
    <div class=""><%= link_to 'Boite', '/inbox', class: "btn btn-success" %></div>
  </div>
</div>
