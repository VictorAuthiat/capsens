<div class="d-flex justify-content-between" style="margin-top:30px">
  <div class="" style="margin: 30px">
    <form class="project_search project-s" id="project_search project-s" action="/projects" accept-charset="UTF-8" method="get">
      <input placeholder="Search a project" type="text" name="q[name_cont]" id="q_name_cont">
      <span></span>
    </form>
  </div>
  <div class="">
  <%= link_to 'Upgoing', projects_url(q: { aasm_state_eq: 'upgoing' }), class: "btn btn-light btn-toggle" %>
  <%= link_to 'Ongoing', projects_url(q: { aasm_state_eq: 'ongoing' }), class: "btn btn-light btn-toggle" %>
  <%= link_to 'Succeeded', projects_url(q: { aasm_state_eq: 'success' }), class: "btn btn-light btn-toggle" %>
  </div>
  <div class="">
    <%= sort_link(@q, :name, '') %>
  </div>
</div>
<script>
  document.querySelector('.sort_link').classList.add('sort-link');
</script>
